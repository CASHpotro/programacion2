package eje1;
public class EcuacionLineal {
    private int a;
    private int b;
    private int c;
    private int d;
    private int f;
    
	public EcuacionLineal(int a, int b, int c, int d, int f) {
        this.a = a;
        this.b = b;
        this.c = c;
        this.d = d;
        this.f = f;
    }
	public boolean tieneSolucion() {
		int solucion = (a*d)-(b*c);
		if( solucion !=0 ) {
			return true;
		}else {
			return false;
		}
	}
    public double getX() {
        int det = (a * d) - (b * c);
        if (det == 0) {
            throw new ArithmeticException("El sistema no tiene solución única.");
        }
        return (double) f / a; 
    }

    public double getY() {
        int det = (a * d) - (b * c);
        if (det == 0) {
            throw new ArithmeticException("El sistema no tiene solución única.");
        }
        return (double) f / b;
	}
}

package eje1;

public class main {

    public static void main(String[] args) {
        EcuacionLineal ecuacion = new EcuacionLineal(3, 3, 3, 3, 3);

        if (ecuacion.tieneSolucion()) {
            System.out.println("tiene solución única.");
            System.out.println("X = " + ecuacion.getX());
            System.out.println("Y = " + ecuacion.getY());
        } else {
            System.out.println("no tiene solución única.");
        }
    }
}
