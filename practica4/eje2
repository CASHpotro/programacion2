import java.util.*;

// interfaz basiquita xd
interface Coloreado {
    String comoColorear(); // metodo fachero
}

// clase base fantasma xd
abstract class Figura {
    protected String color; // color facha

    public void setColor(String c) {
        this.color = c; // guardo el color
    }

    public String getColor() {
        return color; // devuelvo color facha
    }

    @Override
    public String toString() {
        return "Color: " + color; // info basica
    }

    // cada hijo hace su propia version
    public abstract double area();
    public abstract double perimetro();
}

// cuadrados gamer
class Cuadrado extends Figura implements Coloreado {
    private double lado;

    public Cuadrado(double lado, String color) {
        this.lado = lado;
        this.color = color;
    }

    @Override
    public double area() {
        return lado * lado; // multiplicar nomas xd
    }

    @Override
    public double perimetro() {
        return 4 * lado; // 4 lados obvio crack
    }

    @Override
    public String comoColorear() {
        return "Colorear los cuatro lados deah xd";
    }

    @Override
    public String toString() {
        return "Cuadrado lado=" + lado + " " + super.toString();
    }
}

// circulos god
class Circulo extends Figura {
    private double radio;

    public Circulo(double radio, String color) {
        this.radio = radio;
        this.color = color;
    }

    @Override
    public double area() {
        return Math.PI * radio * radio; // pi * r² boom
    }

    @Override
    public double perimetro() {
        return 2 * Math.PI * radio; // 2πr boom
    }

    @Override
    public String toString() {
        return "Circulo radio=" + radio + " " + super.toString();
    }
}

// main el boss final xd
public class Main {
    public static void main(String[] args) {
        Random rand = new Random();
        Figura[] figuras = new Figura[5]; // 5 random figuras

        // meter cuadrados o circulos random
        for (int i = 0; i < figuras.length; i++) {
            int tipo = rand.nextInt(2) + 1; // 1 cuadrado 2 circulo
            String color = (rand.nextInt(2) == 0) ? "Rojo" : "Azul"; // color random
            if (tipo == 1) {
                double lado = rand.nextInt(10) + 1; // lado random 1-10
                figuras[i] = new Cuadrado(lado, color);
            } else {
                double radio = rand.nextInt(10) + 1; // radio random 1-10
                figuras[i] = new Circulo(radio, color);
            }
        }

        // mostrar todo lo fachero
        for (Figura f : figuras) {
            System.out.println(f.toString());
            System.out.println("Area: " + f.area());
            System.out.println("Perimetro: " + f.perimetro());

            // si la figura puede colorear pues lo llamo xd
            if (f instanceof Coloreado) {
                Coloreado c = (Coloreado) f;
                System.out.println(c.comoColorear());
            }
            System.out.println("----");
        }
    }
}
